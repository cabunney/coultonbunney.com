<% content_for :view_specific_css do %>
    <%= stylesheet_link_tag "unlock" %>
<% end %>

<div id="unlock" class=" mx-auto">
  <div class="flex justify-center items-center flex-wrap mxn1" style="min-height:100px;">
        <div class="inline-block mx-auto ">
          <h1 class="h1 center">Enter password to view case study</h1>
          <% if @wrong %>
            <div class="tryagain">
              <h3 class="center">Please try again.</h3>
            </div>
          <% end %>

          <%= form_for :lockup, url: { action: 'unlock' } do |form| %>
           
              <p class="center"><%= form.password_field "codeword", placeholder: "Password", class: 'h3 input',autofocus: true %></p>
          

            <% if params[:return_to].present? %>
              <%= form.hidden_field "return_to", value: params[:return_to] %>
            <% elsif @return_to.present? %>
              <%= form.hidden_field "return_to", value: @return_to %>
            <% end %>
              
            <!-- <p><%= button_tag "Go" %></p> -->
          <% end %>        
        </div>
  </div>
</div>