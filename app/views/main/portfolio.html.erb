<% 
	provide(:title, 'Portfolio') 
	@work_link = "pressed"
	@about_link = ""

%>


<div id = 'work-container' class = "work-grid ">
	<div class="row-fluid">
		<div id = "disgo_div" class = "span12 work clearfix">
			<div class = "span6 clearfix">
				<h1>Disgo <small><%=image_tag('iphone_icon_g.png',:class=>'icon-tag')%></small></h1>
				<!-- <div class = "description">A mobile web application that makes your location a learning experience.
				</div> -->
				<div class = "description"><span class = 'emphasis d1'>Locate and Learn:</span> Find interesting spots near you, and learn quick, crowdsourced facts about them.</div>
		

				<div class = "description"><span class = 'emphasis d2'>Discover:</span> Find new locations from around the world, and search for places you want to learn more about.</div>
				

				<div class = "description"><span class = 'emphasis d3'>Interact:</span> Add new locations, contribute facts seamlessly, and favorite places for easy access later.</div>
				
				<!-- <div class = "well well-small"> -->
				<!-- <div class = "built "><strong>Built using</strong></div> -->
				<div class = "built_description hidden-phone"><span class = "tag">HTML5</span><span class = "tag">CSS3 </span><span class = "tag">PHP</span> <span class = "tag">JQuery Mobile </span><span class = "tag">Bootstrap</span></div>
				<!-- </div> -->

				<div class = "row-fluid">
					<div class = "span12">
<!-- 
						<%= link_to('') do %>
			  				<div class = "btn learn-more">Learn more <i class="icon-plus-sign"></i>
							</div>
						<% end %>
					 -->
					
						<%= link_to('http://bit.ly/godisgo') do %>
			  				<div class = "btn link-to">bit.ly/godisgo <i class="icon-link"></i>
							</div>
						<% end %>
					</div>
				</div>
				
				

			</div>
			<div class = "span6 img-span">

				<div id="myCarousel" class="carousel slide">
				  <!-- Carousel items -->
				  <div class="carousel-inner">
				    <div class="active item item-1"><%=image_tag('disgo_full.png', :class =>'hidden-phone')%>
					</div>
				    <div class="item item-2"><%=image_tag('disgo_full_disc.png', :class =>'hidden-phone')%></div>
				    <div class="item item-3"><%=image_tag('disgo_full_fav.png', :class =>'hidden-phone')%></div>
				  </div>
				  <!-- Carousel nav -->
				  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
				  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
				</div>
			</div>
			<!-- <div class = "clearfix"></div> -->
		</div>
	</div>

	<div class="row-fluid">
		<div class = "span12 work">

		</div>
	</div>
</div>

<script>
	$('.carousel').carousel('pause');
	$('.left').hide();
	$('.d1').css('text-decoration','underline');
	$('.carousel').bind('slid', function() {
    	var left = $(this).parent().find('.active').hasClass('item-1');
		var right = $(this).parent().find('.active').hasClass('item-3');
		if (left) {
			$(this).parent().find('.left').hide();
			$(this).parent().parent().find('.emphasis').css('text-decoration','none');
			$(this).parent().parent().find('.d1').css('text-decoration','underline');

		} else if (right) {
			$(this).parent().find('.right').hide();
			$(this).parent().parent().find('.emphasis').css('text-decoration','none');
			$(this).parent().parent().find('.d3').css('text-decoration','underline');
		} else {
			$(this).parent().find('.carousel-control').show();
			$(this).parent().parent().find('.emphasis').css('text-decoration','none');
			$(this).parent().parent().find('.d2').css('text-decoration','underline');

		}
	})

	// $('.description').fitText(3, { minFontSize: '14px', maxFontSize: '14px' });
	// $('.emphasis').fitText(2, { minFontSize: '14px', maxFontSize: '18px' });
	// jQuery("#responsive_headline").fitText(1.2);
	
	
</script>

